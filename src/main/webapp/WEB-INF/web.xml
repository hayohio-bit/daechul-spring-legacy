<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	id="WebApp_ID" version="6.0">
	
  <!-- Jakarta EE 6.0 신규 기능: 기본 인코딩 설정 (encodingFilter 불필요) -->
  <request-character-encoding>UTF-8</request-character-encoding>
  <response-character-encoding>UTF-8</response-character-encoding>
		
	<display-name>DCProject Spring Legacy Migration</display-name>


	<!-- 1. 서버 시작 시 Root Context (DB, Service, Security) 로드 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- ContextLoaderListener : DB, Service, Security 같은 비웹 계층 빈(root-context.xml)을 서버 시작 시 로드 -->
	<!-- DispatcherServlet : Controller, View 관련 빈(servlet-context.xml)을 서블릿 초기화 시 로드 -->

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring/root-context.xml</param-value>
	</context-param>
	<!-- contextConfigLocation 파라미터 : ContextLoaderListener가 param-value 경로를 읽도록 지시 -->
	<!-- Spring Ioc(Inversion of Controll, 제어의 역전) 컨테이너를 설정하는 핵심 파일 -->


  	<!-- 2. Spring Security 필터 (인증/인가 먼저 처리) -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>	
	
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


  	<!-- 3. DispatcherServlet (MVC Controller, View) -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>

		<multipart-config>
	      <max-file-size>20971520</max-file-size>     <!-- 20MB -->
	      <max-request-size>41943040</max-request-size> <!-- 40MB -->
	      <file-size-threshold>20971520</file-size-threshold>
		</multipart-config>
	</servlet>
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	
	<!-- 4. 기본 페이지 설정 (http://localhost:8080/ 접근 시) -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
  	</welcome-file-list>
	

</web-app>
