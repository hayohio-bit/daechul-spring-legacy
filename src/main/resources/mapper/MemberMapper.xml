<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MemberMapper">

  <resultMap type="org.zerock.dto.MemberDTO" id="memberMap">
    <id property="id" column="id"/>
    <result property="id" column="id"/>
    <result property="password" column="password"/>
    <result property="name" column="name"/>
    <result property="email" column="email"/>
    <result property="role" column="role"/>
    <result property="phone" column="phone"/>
    <result property="regdate" column="regdate"/>
    <result property="enabled" column="enabled"/>
    <collection property="authList" resultMap="authMap"></collection>
  </resultMap>

  <resultMap type="org.zerock.dto.AuthDTO" id="authMap">
    <result property="id" column="id"/>
    <result property="role" column="role"/>
  </resultMap>

  <select id="read" resultMap="memberMap">
    SELECT 
      mem.id, password, name, email, enabled, regdate, phone, auth.role
    FROM 
      members mem LEFT OUTER JOIN member_roles auth on mem.id = auth.id
    WHERE mem.id = #{id}
  </select>
  
  <insert id="insert">
    INSERT INTO members (id, password, name, email, phone)
    VALUES (#{id}, #{password}, #{name}, #{email}, #{phone})
  </insert>
  
  <insert id="insertAuth">
    INSERT INTO member_roles (id, role)
    VALUES (#{id}, #{role})
  </insert>

  <select id="idCheck" resultType="int">
    SELECT COUNT(*) FROM members WHERE id = #{id}
  </select>

  <update id="update">
    UPDATE members
    SET 
      name = #{name},
      email = #{email},
      phone = #{phone}
      <if test="password != null and password != ''">
        , password = #{password}
      </if>
    WHERE id = #{id}
  </update>

</mapper>
